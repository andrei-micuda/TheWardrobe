@model List<TheWardrobe.Models.Review>

<div class="row">
    <h5 class="my-3 mr-3">Other Reviews</h5>
    <div class="text-center d-flex align-items-center">
        <!-- parent element for pagination menu list -->
        <ul class="pagination pagination-sm custom-pagination my-0"></ul>
    </div>
    <div class="row w-100">
        @foreach (var review in Model)
        {
            <div class="col-6">
                <article class="card mb-3 row-review">
                    <div class="card-body" style="min-height: 130px;">
                        <div class="w-100 d-flex">
                            <img src="~/Content/user-placeholder.png" class="img-xs icon rounded-circle border-input mr-3" style="width: 40px; height: 40px;">
                            <div class="d-flex justify-content-between align-items-center w-100">
                                <div>
                                    <h6 class="mb-0">@review.User.UserName</h6>

                                    @Html.Partial("_ProductRating", (double)review.Rating)
                                    <span class="label-rating text-orange">@review.RatingString</span>
                                </div>

                                <div class="text-muted float-right">24.04.2020</div>
                            </div>
                        </div> <!-- icontext.// -->
                        <div class="mt-3">
                            <h6 class="font-weight-bold">@review.ReviewTitle</h6>
                            <p @(review.ReviewBody == null ? "class=text-muted" : "")>@(review.ReviewBody ?? "No description.")</p>
                        </div>
                    </div>
                </article>
            </div>
        }
    </div>
</div>