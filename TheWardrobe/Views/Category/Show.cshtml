@{
    ViewBag.Title = "Show";
}

    <div class="d-flex flex-row">
        <div class="card px-0 w-25 bg-dark" style="box-sizing: border-box; overflow: hidden">
            <img class="card-img-zoom card-img-top" src="@ViewBag.Category.Photo" alt="Category picture">

        </div>

        <div class="w-75 p-3 d-flex flex-row mb-auto card ml-2">
            <h5 class="text-dark m-0 p-2 w-75">@ViewBag.Category.CategoryName</h5>

            <div class="w-25 d-flex flex-row justify-content-center h-auto">
                @*<a class="p-0 link-unstyled d-inline" href="/Category/Index" style="width: 33%;cursor:default">
            Go back
        </a>*@
                <a class="p-0 d-inline btn btn-outline-info m-auto p-1" href="/Category/Edit/@ViewBag.Category.CategoryId" style="width: 33%;cursor:default">
                    Edit
                </a>


                <form action="/Category/Delete/@ViewBag.Category.CategoryId" method="post" class="m-auto">
                    @Html.HttpMethodOverride(HttpVerbs.Delete)
                    <button  class="btn btn-outline-danger p-1" type="submit" style="cursor:pointer">
                        Delete
                    </button>
                </form>
            </div>
            

        </div>

    </div>
